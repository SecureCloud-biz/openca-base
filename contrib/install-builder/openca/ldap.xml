        <component>
            <name>ldap</name>
            <description>LDAP Management</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>LDAP Management CGI</description>
                    <destination>/opt/local/var/www/cgi-bin/pki</destination>
                    <name>ldapcgi</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>/opt/local/var/www/cgi-bin/pki/ldap</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>LDAP Management HTDocs</description>
                    <destination>/opt/local/var/www/html/pki</destination>
                    <name>ldaphtml</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>/opt/local/var/www/html/pki/ldap</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Ldap Menu CFG</description>
                    <destination>${installdir}/etc/openca/menus</destination>
                    <name>ldapmenuconfig</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>/usr/local/etc/openca/menus/ldap-menu.xml.template</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>LDAP Management SRV</description>
                    <destination>${installdir}/etc/openca/servers</destination>
                    <name>ldapsrv</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>/usr/local/etc/openca/servers/ldap.conf.template</origin>
                        </distributionFile>
                    </distributionFileList>
		    <actionList>
			<changeOwnerAndGroup>
			    <owner>www</owner>
			    <group>www</group>
			    <files>${installdir}/etc/openca/servers/*</files>
			</changeOwnerAndGroup>
		   </actionList>
                </folder>
                <folder>
                    <description>LDAP Management AC</description>
                    <destination>${installdir}/etc/openca/access_control</destination>
                    <name>ldapac</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>/usr/local/etc/openca/access_control/ldap.xml.template</origin>
                        </distributionFile>
                    </distributionFileList>
		    <actionList>
			<changeOwnerAndGroup>
			    <owner>madwolf</owner>
			    <group>www</group>
			    <files>/usr/local/etc/openca/access_control/ldap.xml*</files>
			</changeOwnerAndGroup>
		   </actionList>
                </folder>
            </folderList>
        </component>
