        <component>
            <name>ca</name>
            <description>Certification Authority</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Certification Authority CGI</description>
                    <destination>/opt/local/var/www/cgi-bin/pki</destination>
                    <name>cacgi</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>/opt/local/var/www/cgi-bin/pki/ca</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Certification Authority HTDocs</description>
                    <destination>/opt/local/var/www/html/pki</destination>
                    <name>cahtml</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>/opt/local/var/www/html/pki/ca</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Certification Authority Menu CFG</description>
                    <destination>${installdir}/etc/openca/menus</destination>
                    <name>camenuconfig</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>/usr/local/etc/openca/menus/ca-menu.xml.template</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Certification Authority Server CFG</description>
                    <destination>${installdir}/etc/openca/servers</destination>
                    <name>casrvconfig</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>/usr/local/etc/openca/servers/ca.conf.template</origin>
                        </distributionFile>
                    </distributionFileList>
		    <actionList>
			<changeOwnerAndGroup>
			    <owner>www</owner>
			    <group>www</group>
			    <files>/usr/local/etc/openca/servers/*</files>
			</changeOwnerAndGroup>
		   </actionList>
                </folder>
                <folder>
                    <description>Certification Authority AC</description>
                    <destination>${installdir}/etc/openca/access_control</destination>
                    <name>casrvac</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>/usr/local/etc/openca/access_control/ca.xml.template</origin>
                        </distributionFile>
                    </distributionFileList>
		    <actionList>
			<changeOwnerAndGroup>
			    <owner>madwolf</owner>
			    <group>www</group>
			    <files>/usr/local/etc/openca/access_control/ca.xml*</files>
			</changeOwnerAndGroup>
		   </actionList>
                </folder>
            </folderList>
        </component>
